# Flight API Configuration Template
# Copy this file to .env and add your actual API keys

# Amadeus API Configuration
# Sign up at: https://developers.amadeus.com/register
# Free tier: 1,000 requests per month
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here

# Alternative APIs (Optional)
# RapidAPI Key for backup flight data
RAPIDAPI_KEY=your_rapidapi_key_here

# Aviationstack API (for flight schedules)
AVIATIONSTACK_API_KEY=your_aviationstack_key_here

# Cache Configuration
PRICE_CACHE_DURATION=3600  # 1 hour in seconds
MAX_CACHE_SIZE=1000        # Maximum number of cached price entries

# API Rate Limiting
MAX_REQUESTS_PER_MINUTE=50
RETRY_ATTEMPTS=3
TIMEOUT_SECONDS=15